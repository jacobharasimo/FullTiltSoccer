@model FullTilt.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

<div class="row">
    <div class="twelve columns">    
        <h1>@ViewBag.Title.</h1>
    </div>    
</div>        
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new {@class="custom"})) {
        <div class="row">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
        </div>
        <div class="row">
            <div class="six columns">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
            </div>                    
            <div class="six columns">        
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email)                        
            </div>
        </div>
        <div class="row">
            <div class="six columns">
                @Html.LabelFor(m => m.UserFirstName)
                @Html.TextBoxFor(m => m.UserFirstName)
            </div>                    
            <div class="six columns">
                @Html.LabelFor(m => m.UserLastName)
                @Html.TextBoxFor(m => m.UserLastName)
            </div>
        </div>
        
        <div class="row">
            <div class="six columns">                    
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)                        
            </div>                    
        </div>
        <div class="row">
            <div class="six columns">
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)                        
            </div>
        </div>
        <div class="row">
            <div class="columns twelve">
                <input type="submit" value="Register" class="button right" id="register"/>
            </div>
        </div>
    }    

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
     <script type="text/javascript">
         $(document).ready(function () {
             $("#register").button();
         });
    </script>
}
